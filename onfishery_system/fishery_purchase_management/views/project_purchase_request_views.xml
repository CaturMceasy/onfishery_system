<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_project_purchase_request_tree" model="ir.ui.view">
        <field name="name">project.purchase.request.tree</field>
        <field name="model">project.purchase.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="created_date"/>
                <field name="category"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_project_purchase_request_form" model="ir.ui.view">
        <field name="name">project.purchase.request.form</field>
        <field name="model">project.purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'confirmed'"/>
                    <button name="action_po_created" string="Create PO" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Mark as Done" type="object" class="oe_highlight" invisible="state != 'po_created'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,po_created,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_delivery" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="delivery_count" widget="statinfo" string="Deliveries"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="company_ids" widget="many2many_tags" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="category" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="created_date"/>
                            <field name="repeat_period"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="List Item" name="list_item">
                            <field name="item_line_ids" readonly="state != 'draft'">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom_id" readonly="1"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Detail Permintaan" name="request_details">
                            <field name="request_line_ids" readonly="state == 'draft'">
                                <tree>
                                    <field name="company_id"/>
                                    <field name="product_id"/>
                                    <field name="product_uom_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="alternate_uom_id"/>
                                    <field name="alternate_uom_qty"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_project_purchase_request_search" model="ir.ui.view">
        <field name="name">project.purchase.request.search</field>
        <field name="model">project.purchase.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_id"/>
                <field name="category"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="PO Created" name="po_created" domain="[('state','=','po_created')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Category" name="group_by_category" context="{'group_by': 'category'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

