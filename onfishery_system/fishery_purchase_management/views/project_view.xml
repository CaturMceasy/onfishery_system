<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_comproject_tree" model="ir.ui.view">
        <field name="name">res.comproject.tree</field>
        <field name="model">res.comproject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="created_date"/>
            </tree>
        </field>
    </record>

    <record id="view_comporiject_form" model="ir.ui.view">
        <field name="name">res.comporiject.form</field>
        <field name="model">res.comporiject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="date_start"/>
                        <field name="created_date"/>
                    </group>
                    <notebook>
                        <page string="Company List">
                            <field name="company_list">
                                <tree>
                                    <field name="name"/>
                                    <field name="investor_address"/>
                                    <field name="total_pools"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>